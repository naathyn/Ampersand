<% content_for :head do %>
  <% provide(:title, @title) %>
<% end %>

<div class="page-fade">
  <ul class="breadcrumb">
    <li> <%= link_to "Home", :root %> <span class="divider">/</span> </li>
    <li> <%= link_to "Members", :users %>  <span class="divider">/</span> </li>
    <li class="active"> <%= @title %> </li>
  </ul>

  <div class="row-fluid">
    <div id="chat_wrapper" class="span10 offset1">
      <div class="well-header"></div>

      <div class="chat_container">
        <div id="new_chat">
          <div id="chat_room">
            <%= render @messages %>
          </div>
        </div>

        <div class="chat_container_text">
          <%= render 'messages/form' %>
        </div>
      </div> <!-- chat_container -->

      <div class="well-bottom"> </div>
    </div> <!-- chat_wrapper -->
  </div> <!-- row-fluid -->
</div> <!-- page-fade -->
