<% content_for :head do %>
  <% provide(:title, @user.realname) %>
<% end %>

  <% @user ||= current_user %>
  <ul class="breadcrumb">
    <li><%= link_to "Home", root_path %> 
      <span class="divider">/</span>
    </li>
    <li><%= link_to "Members", users_path %> 
      <span class="divider">/</span>
    </li>

    <li class="active"><%= @user.realname %></li>
  </ul>

  <%= render 'shared/profile_stats' %>

  <ul class="nav nav-tabs">
    <li class="active"><a href="#profile">@<%= @user.name %></a></li>

      <% if current_user?(@user) %>

        <li><a href="#replies">Replies (<%= @user.replies.count %>)</a></li>

      <% end %>

    <li><a href="#follow">Following (<%= @following.count %>)</a></li>
    <li><a href="#followed">Followers (<%= @followers.count %>)</a></li>
  </ul>
 
  <div class="tab-content">

    <div class="tab-pane active" id="profile">
      <%= render 'feeds/main/micropost' %>
        </div>

        <% if current_user?(@user) %>

        <div class="tab-pane" id="replies">
          <%= render 'feeds/main/reply' %>
        </div>

      <% end %>

      <div class="tab-pane" id="follow">
        <% if @following.any? %>
          <ul class="users-follow">
            <%= render @following %>
          </ul>
          <%= will_paginate @following %>
        <% end %>
      </div>

    <div class="tab-pane" id="followed">
      <% if @followers.any? %>
        <ul class="users-follow">
          <%= render @followers %>
        </ul>
        <%= will_paginate @followers %>
      <% end %>
    </div>

  </div>

<%= render 'microposts/modal' %>
