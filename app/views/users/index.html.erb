<% content_for :head do %>
  <% provide(:title, @title) %>
<% end %>

  <ul class="breadcrumb">
    <li><%= link_to "Home", :root %> 
    <span class="divider">/</span></li>

    <li class="active"><%= @title %></li>
  </ul>

  <ul class="nav nav-tabs">
    <li class="active"><a href="#members">Members (<%= @users.count %>)</a></li>

    <li><a href="#online">Online Now!</a></li>
  </ul>
 
  <div class="tab-content">

    <div class="tab-pane active" id="members">
      <ul class="users-follow" style="margin:0;">
        <%= render @users %>
      </ul>
      <%= will_paginate @users %>
    </div>


  <div class="tab-pane" id="online">
    <div class="alert alert-block" style="margin-top:1em;">
      <h2>Woah There Sally!</h2>
      Looks like this section is still under construction.  Should have the kinks
      worked out soon!
    </div>
  </div>

</div>
