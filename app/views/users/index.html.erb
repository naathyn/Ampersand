<% content_for :head do %>
	<% provide(:title, 'Members') %>
  <%= javascript_include_tag 'http://www.google.com/jsapi' %>
<% end %>

	<div class=" navbar navbar-inverse navbar-fixed-top">
  	<div class="navbar-inner">
			<div class="container">
    	<%= render 'layouts/navigation_members' %>
		</div>
	</div>
</div>

<h2 class="center" style="padding-bottom:10px;">
	<%= pluralize(@users.count, "member") %> and growing
</h2>

  <% if current_user.admin? %>
  <div class="container-fluid">
    <div class="row-fluid">
    <div id="chart" style="width: 796px; height: 240px">
      <%= render_chart @chart, 'chart' %>
    </div>
    <br />
  </div>
  <div class="row-fluid">
  <table class="datatable table table-bordered">
    <thead>
      <tr>
        <th>Gravatar</th>
        <th>Real Name</th>
        <th>Email</th>
        <th>Username</th>
        <th>Join Date</th>
      </tr>
    </thead>
    	<tbody>
      	<% @users.each do |user| %>
        	<tr>
         	  <td><%= gravatar_for user, size: 32 %></td>
            <td><%= link_to user.realname, user %></td>
            <td><%= user.email %></td>
            <td><%= user.name %></td>
            <td><%= user.created_at.to_date %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<% else %>

<%= will_paginate %>
<ul class="users">
  <%= render @users %>
</ul>
<%= will_paginate %>

<% end %>
