<% if @micropost.likes.any? %>
  <ul class="inline-share-stats share-stats">
    <li style="float: right;">
      <a><i class="icon-heart"></i>
        <strong id="modal_likes<%= @micropost.id %>" style="font-size: 16px;"><%= @micropost.fan_likes_count %></strong>
      </a>
    </li>
  </ul>
  <ul class="users_modal<%= @micropost.id %>">
    <% @microposts.each do |user| %>
      <li><%= link_to gravatar_for(user, size: 38), user %></li>
    <% end %>
  </ul>
<% end %>
