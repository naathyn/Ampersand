  <% if item.likes.any? %>

    <ul class="inline-share-stats share-stats hearts likes"
        data-original-title="<% item.fans.each do |user| %>
                                  <li><%= user.name %></li>
                                                <% end %>">

  <% else %>

    <ul class="inline-share-stats share-stats">

  <% end %>

      <li id="like_count<%= item.id %>">
        <a><i class="icon-heart"></i></a>
        <strong><%= item.likes.count %></strong>
      </li>

    </ul>
