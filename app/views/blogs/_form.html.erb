<div class="photo tapetwo tapethree" style="float: none;">
  <div class="profile">
    <div class="profile-header">
      <div class="page-fade container-fluid">
        <%= form_for(@blog, html: { multipart: true }) do |f| %>
          <%= render 'shared/error_messages', object: f.object %>

            <%= f.label :title %>
            <%= f.text_field :title, placeholder: "Your entry's title" %>

            <%= f.label :photo, "Thumbnail" %>
            <%= f.file_field :photo %>

            <%= f.text_area :content, class: "wysihtml5", rows: 8,
                  placeholder: "Your wonderful content will go here ;)" %>

            <%= f.label :tag_names %>
            <%= f.text_field :tag_names, placeholder: "Tags are seperated by commas" %>

          <%= f.submit "Post Blog", class: "btn btn-success" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
