<div class="container-fluid">
  <%= form_for(@blog, html: { multipart: true }) do |f| %>
    <%= render 'shared/error_messages', object: f.object %>

      <%= f.label :title %>
      <%= f.text_field :title %>

      <%= f.label :photo %>
      <%= f.file_field :photo %>

      <%= f.text_area :content, rows: 8, value: "<p> Put each new paragraph inside these tags to be indented. </p> <p> This is a second paragraph, etc. </p>" %>

      <%= f.label :tag_names, "Tags (seperated by commas)" %>
      <%= f.text_field :tag_names %>

    <%= f.submit "Post Blog", class: "btn btn-success" %>
  <% end %>
</div>
  <hr />
