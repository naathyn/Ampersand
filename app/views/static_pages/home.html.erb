<% content_for :head do %>
  <% provide(:title, @title) %>
<% end %>

	<%= yield flash.now[:info] = "Last updated October 24nd, at 3:5 a.m. CST" %>

    <div class=" navbar navbar-inverse navbar-fixed-top">
      <div class="navbar-inner">
				<div class="container">
    			<%= render 'layouts/navigation_root' %>
					</div>
				</div>
			</div>

		<% if signed_in? %>
			<aside class="side-module side-menu mini-profile">
					<a href="<%= user_path(current_user) %>" class="share-anchor">
       			<section>
        			<%= render 'shared/user_info' %>
       			</section>
					</a>
       	<section>
         <%= render 'shared/stats' %>
       </section>
       <span>
				<%= render 'shared/micropost_form' %>
			</span>
			</aside>
				<div class="share-container">
					<div class="well-header"> 
            <a href="<%= user_path(current_user) %>" alt="Profile"><i class="icon-user" style="padding-left:8px;"> </i></a>
            <a href="<%= inbox_path %>" alt="Inbox"><i class="icon-envelope"> </i></a>
          </div>
				    <%= render 'shared/share' %>
						  </div>
						<% else %>

						<div class="center hero-unit">
    			<h1>Ampersand</h1>
    		<h3>
    			Simple.  Modern.  Interactive.
				</h3>
			<h5>In development</h5>

    <%= link_to "Sign up now!", signup_path,
                                class: "btn btn-large btn-primary" %>
		<center>
			<iframe width="560" height="315" src="https://www.youtube.com/embed/XKwHgbiyne4?rel=0" frameborder="0" allowfullscreen></iframe>
		</center>

	</div>
<% end %>
