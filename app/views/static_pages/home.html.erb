<% content_for :head do %>
  <% provide(:title, @title) %>
<% end %>

<%= yield flash.now[:info] = "Last updated on November 27th at 8:00 pm, CST. tagged: checkups" %>

  <% if signed_in? %>

    <aside class="side-module side-menu mini-profile">
      <a href="<%= user_path(current_user) %>" class="share-anchor">
        <section>
          <%= render 'shared/user_info' %>
        </section>
      </a>
        <section>
          <%= render 'shared/stats' %>
        </section>
        <section class="side-module-share">
          <%= render 'shared/share_form' %>
        </section>
      </aside>

      <div class="well-header">
        <a href="<%= user_path(current_user) %>" alt="Profile">
          <i class="icon-user"> </i>
        </a>
      </div>

        <div class="share-container">
          <%= render 'feeds/main/share' %>
        </div>

      <div class="well-bottom">
        <a href="#" alt="Top"><i class="icon-arrow-up"></i></a>
      </div>

        <div id="pagination" style="float:right;">
          <%= will_paginate @shares %>
        </div>

    <% else %>

      <div class="center hero-unit">

        <h1>Ampersand</h1>
       <h3>Simple. Modern. Interactive.</h3>
      <h5>Alpha Release #2</h5>

    <%= link_to "Sign up now!", signup_path,
        class: "btn btn-large btn-primary" %>

    <h6 style="font-size:11px;">Alpha Release #1 Video</h6>

    <center>
      <iframe width="560" height="315" 
      src="https://www.youtube.com/embed/XKwHgbiyne4?rel=0" 
      frameborder="0" allowfullscreen></iframe>
    </center>

  </div>

<% end %>
