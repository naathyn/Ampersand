<% content_for :head do %>
  <% provide(:title, @title) %>
<% end %>

<%= yield flash.now[:info] = "Last updated on March 2nd at 12:00 p.m.
      Simple things that adds a shine. Can you spot some of them?" %>

<% if signed_in? %>
  <div class="row-fluid">

    <aside class="span4 side-module side-menu mini-profile">
      <a href="<%= user_path(current_user) %>" class="share-anchor">
        <section class="page-fade">
          <%= render "shared/user_info" %>
        </section>
      </a>
      <section class="page-fade">
        <%= render "shared/stats" %>
      </section>
      <section class="page-fade side-module-share">
        <%= render "shared/share_form" %>
      </section>
    </aside>

    <div id="feed" class="span8">

      <div class="well-header">
        <a class="page-fade" href="<%= user_path(current_user) %>" title="Profile">
          <i class="icon-user"></i>
        </a>
        <a class="page-fade" href="<%= captchas_user_path(current_user) %>" title="Captchas">
          <i class="icon-camera"></i>
        </a>
        <a class="page-fade" href="<%= blog_user_path(current_user) %>" title="Your Blog">
          <i id="comment-bar" class="icon-book"></i>
        </a>
      </div>

        <%= render 'feeds/main/share' %>

      <div class="well-bottom" style="margin-bottom: 1em;">
        <a href="#" title="Top"> <i class="icon-arrow-up"></i> </a>
      </div>
    </div> <!-- feed-->

    <div id="pagination" style="float: right; clear: both;">
      <%= will_paginate @shares unless @shares.empty? %>
    </div>
  </div> <!-- row-fluid -->

<% else %>

  <div class="page-fade center hero-unit">
    <h1> Ampersand </h1>
    <h3> Simple. Modern. Interactive. </h3>
    <h5> Alpha Release #2 </h5>
    <%= link_to "Sign up now!", :signup,
        class: "btn btn-large btn-primary" %>
  </div>
<% end %>
