<% content_for :head do %>
  <% provide(:title, @title) %>
<% end %>

  <% unless signed_in? %>
		<%= yield flash.now[:notice] = "Apologies to members who lost their account.  The database took a major hit and despite all efforts, I was unable to recover your accounts.  The site is now stable and you are encouraged to sign back up." %>
  <% end %>

	<%= yield flash.now[:info] = "Last updated October 18th, at 4:15 a.m. CST" %>

    <div class=" navbar navbar-inverse navbar-fixed-top">
      <div class="navbar-inner">
				<div class="container">
    			<%= render 'layouts/navigation_root' %>
					</div>
				</div>
			</div>

		<% if signed_in? %>
			<aside class="side-module side-menu mini-profile">
					<a href="<%= user_path(current_user) %>" class="share-anchor">
       			<section>
        			<%= render 'shared/user_info' %>
       			</section>
					</a>
       	<section>
         <%= render 'shared/stats' %>
       </section>
       <span>
				<%= render 'shared/micropost_form' %>
			</span>
			</aside>
				<div class="share-container">
					<div class="well-header">
						<%= link_to "@you", user_path(@user), style: "padding-right:15px;" %>
							<%= link_to "!nbox", connect_path %>
								</div>
									<%= render 'shared/share' %>
								</div>
							<% else %>

						<div class="center hero-unit">
    			<h1>Ampersand</h1>
    		<h3>
    			Simple.  Modern.  Interactive.
				</h3>
			<h5>In development</h5>

    <%= link_to "Sign up now!", signup_path,
                                class: "btn btn-large btn-primary" %>
		<center>
			<iframe width="560" height="315" src="https://www.youtube-nocookie.com/embed/XKwHgbiyne4?rel=0" frameborder="0" allowfullscreen></iframe>
		</center>
	</div>

<% end %>
