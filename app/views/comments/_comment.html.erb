<li id="<%= comment.id %>">
  <%= link_to gravatar_for(comment.user), comment.user %>
  <span class="timestamp">
    <%= time_ago_in_words(comment.created_at) %> ago.
  </span>
  <span id="<%= comment.user.name %>" class="user">
    <%= link_to comment.user.realname, comment.user %>
  </span>
  <span class="content"> <%= comment.content %> </span>
  <% if current_user?(comment.user) %>
    <div class="well-footer" style="margin-bottom: -5px;">
      <%= link_to "Delete", [@blog, comment], method: :delete,
            data: { confirm: "Are you sure you want to delete this?" },
            title: comment.content %>
  <% else %>
    <div class="well-footer" style="margin-bottom: 10px;">
  <% end %> <!-- TODO: Fix this junk -->
  </div>
</li>
