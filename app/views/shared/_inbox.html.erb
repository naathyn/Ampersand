<% if @inbox_items.any? %>
	<%= render partial: 'shared/inbox_item', collection: @inbox_items %>
		<div class="well-bottom" style="text-align:right;"><%= link_to "Return to Feed", root_path %></div>
  		<%= will_paginate @inbox_items %>
		<% else %>
	<%= yield flash.now[:info] = "Your inbox seems to be empty.  Send one of your followers a private message!" %>
<% end %>
