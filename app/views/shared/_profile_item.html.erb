<div class="well">
<li id="<%= profile_item.id %>">
		<span class="user">
			<%= link_to gravatar_for(profile_item.user), profile_item.user %>
				<%= link_to profile_item.user.realname, profile_item.user %>
				<a data-toggle="collapse" data-target="#well-footer<%= profile_item.id %>" style="color:rgb(51,51,51);text-decoration:none;">
					<span class="username"> <small>@<%= profile_item.user.name %></small>
						<span class="timestamp"><small><%= time_ago_in_words(profile_item.created_at) %> ago </small>
						</span></span></span>
						<span class="content">
							<%= profile_item.content %>
						</span></a>

						<div class="well-footer">

					<a data-toggle="collapse" data-target="#well-footer<%= profile_item.id %>" style="float:none;padding:0;margin:0;">Expand</a>

				<div id="well-footer<%= profile_item.id %>" class="show collapse">

				<% if current_user?(profile_item.user) %>
				<%= link_to "Delete", profile_item, method: :delete,
  			data: { confirm: "Are you sure you want to delete this?" }, 
			style: "float:none;padding:0;margin:0;",
		title: profile_item.content %>
		<% end %>
	</li>
</div>
