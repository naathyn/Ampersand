<div id="<%= profile_item.user.name %>_<%= profile_item.id %>" class="well well-inner">
		<span class="user">
			<%= link_to gravatar_for(profile_item.user), profile_item.user %>
				<%= link_to profile_item.user.realname, profile_item.user %></span>
				<a data-toggle="collapse" data-target="#well-footer<%= profile_item.id %>" style="color:rgb(51,51,51);text-decoration:none;">
					<span class="username"> <small>@<%= profile_item.user.name %></small></span>
						<span class="timestamp"><small><%= time_ago_in_words(profile_item.created_at) %> ago </small></span>
						<span class="content">
							<%= profile_item.content %>
						</span></a>

						<div class="well-footer">

					<a data-toggle="collapse" data-target="#well-footer<%= profile_item.id %>" style="float:none;padding:0;margin:0;">Expand</a>

				<div id="well-footer<%= profile_item.id %>" class="show collapse">

				<% if current_user?(profile_item.user) %>
				<%= link_to "Delete", profile_item, method: :delete,
  			data: { confirm: "Are you sure you want to delete this?" }, 
				style: "float:none;padding:0;margin:0;",
				title: profile_item.content %>
				<% end %>

		<div id="like_form<%= profile_item.id %>">
  <% if current_user.liked?(profile_item) %>
		<%= form_for(current_user.opinions.find_by_like_id(profile_item),
    						html: { method: :delete },
             		remote: true) do |f| %>
  	<%= f.submit "Unlike", class: "btn-link" %>
	<% end %>
  <% else %>
		<%= form_for(current_user.opinions.build(like_id: profile_item.id), 
				remote: true) do |f| %>
  			<div><%= f.hidden_field :like_id %></div>
  					<%= f.submit "Like", class: "btn-link" %>
					<% end %>
  			<% end %>
			</div>

				<% if current_user!=(profile_item.user) %>

			<form action="/microposts" class="new_micropost" id="new_micropost" method="post" style="padding-bottom:0;padding-top:10px;margin:0;width:65%;">

<a rel="tooltip" title="Your reply is ready to go!  Just include your message after @<%= profile_item.user.name %>" style="padding:0;margin:0;">

				<textarea id="micropost_content" name="micropost[content]" placeholder="Reply to <%= profile_item.user.realname %>'s share by typing @<%= profile_item.user.name %> followed by your message.">@<%= profile_item.user.name %> </textarea></a>

				<input name="authenticity_token" type="hidden" value=$<%= csrf_meta_tags %>
				<input class="btn-small btn-primary" name="commit" value="Reply" type="submit" style="margin:0;"></form>
			<% end %>
		</div>
	</div>
</div>
