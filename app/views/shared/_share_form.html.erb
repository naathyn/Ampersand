<%= form_for(current_user.microposts.build) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>

    <%= f.text_area :content,
        placeholder: "Speak up, the world needs listeners..." %>

  <%= f.submit "Share", class: "btn btn-primary", 
                        style: "padding-left:10px;" %>
<% end %>
