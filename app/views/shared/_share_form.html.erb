<%= form_for @micropost do |f| %>
  <%= render 'shared/error_messages', object: f.object %>

    <%= f.text_area :content, placeholder: "What's on your mind, #{current_user.username}?",
      "data-autocomplete-url" => url_for(controller: :users, action: :autocomplete) %>

  <%= f.submit "Share", class: "btn btn-primary", style: "padding-left: 10px;" %>
<% end %>
