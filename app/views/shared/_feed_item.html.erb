<div class="well">
<li id="<%= feed_item.id %>">
  <%= link_to gravatar_for(feed_item.user), feed_item.user %>
  <span class="user">
    <%= link_to feed_item.user.name, feed_item.user %>
  </span>
  <span class="content"><%= feed_item.content %></span>
  <span class="timestamp">
    Posted <%= time_ago_in_words(feed_item.created_at) %> ago.
  </span>
  	<% if current_user?(feed_item.user) %>
 			<%= link_to "Delete", feed_item, method: :delete,
                                     data: { confirm: "Are you sure you want to delete this?" }, title: feed_item.content, class: "btn btn-small" %>
<% end %>
</li>
<% if current_user != (feed_item.user) %>
<form action="/microposts" class="new_micropost" id="new_micropost" method="post">
	<input type="hidden" name="micropost[content]" id="micropost_content" value="@<%= feed_item.user.name %> <%= feed_item.content %>">
  <input class="btn btn-small" name="commit" value="Repost" type="submit">
</form>
<% end %>
</li>
</div>
