<div class="well">
<li id="<%= feed_item.id %>">
		<span class="user">
			<%= link_to gravatar_for(feed_item.user), feed_item.user %>
				<%= link_to feed_item.user.realname, feed_item.user %>
					<span class="username"> <small>@<%=feed_item.user.name %></small>
						<span class="timestamp"><small><%= time_ago_in_words(feed_item.created_at) %> ago </small>
						</span></span></span>
						<span class="content">
					<%= feed_item.content %></span></li>
				<% if current_user?(feed_item.user) %>
			<div class="well-footer">
			<%= link_to "delete", feed_item, method: :delete,
  		data: { confirm: "Are you sure you want to delete this?" }, 
			style: "float:none;padding:0;margin:0;",
			title: feed_item.content %>
			</div>
		<% end %>
		<% if current_user!= feed_item.user %>

	<div class="well-footer">

<a data-toggle="collapse" data-target="#well-footer<%= feed_item.id %>" style="float:none;padding:0;">reply</a>

<div id="well-footer<%= feed_item.id %>" class="show collapse">
<form action="/microposts" class="new_micropost" id="new_micropost" method="post" style="padding-bottom:0;padding-top:10px;padding-right:58px;margin:0;">
<textarea id="micropost_content" name="micropost[content]" placeholder="Reply to <%= feed_item.user.realname %>'s share by typing @<%= feed_item.user.name %> followed by your message."></textarea>
<input name="authenticity_token" type="hidden" value=$<%= csrf_meta_tags %>
<input class="btn-small btn-primary" name="commit" value="Reply" type="submit" style="margin:0;"></form></div></div>

	<% end %>
</div>
