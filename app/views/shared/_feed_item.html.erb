<div class="well">
	<li id="<%= feed_item.id %>">
		<span class="user">
			<%= link_to gravatar_for(feed_item.user), feed_item.user %>
				<%= link_to feed_item.user.realname, feed_item.user %>
					<span class="username"> <small>@<%=feed_item.user.name %></small>
						<span class="timestamp"><small><%= time_ago_in_words(feed_item.created_at) %> ago </small>
						</span></span></span>
						<span class="content">
					<%= feed_item.content %>
				<% if current_user?(feed_item.user) %>
			<%= link_to "Delete", feed_item, method: :delete,
  		data: { confirm: "Are you sure you want to delete this?" }, 
			title: feed_item.content,
			class: "btn btn-small", style: "float:right;" %>
		<% end %>
	</span>
</li>
		<% if current_user != feed_item.user %>
	<div class="well-footer"><a data-toggle="collapse" data-target="#expand">expand</a>
<div id="expand" class="show collapse">
<form action="/microposts" class="new_micropost" id="new_micropost" style="padding-top:10px;margin-left: 58px;margin-right:48px;" method="post">
<textarea id="micropost_content" name="micropost[content]">@<%= feed_item.user.name %> </textarea>
<input name="authenticity_token" type="hidden" value=$<%= csrf_meta_tags %>
<input class="btn btn-small" name="commit" value="Reply" type="submit"></div></div>
	
	<% end %>
</div>
