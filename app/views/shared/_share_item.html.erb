<div id="<%= share_item.user.name %>_<%= share_item.id %>" class="well well-inner">

	<% if share_item.user.admin? %>
		<span class="admin">
			<%= link_to gravatar_for(share_item.user), share_item.user %>
				<%= link_to share_item.user.realname, share_item.user %>
		</span>
			<% else %>
		<span class="user">
			<%= link_to gravatar_for(share_item.user), share_item.user %>
				<%= link_to share_item.user.realname, share_item.user %>
		</span>
	<% end %>

				<a data-toggle="collapse" data-target="#<%= share_item.id %>_reply" style="color:rgb(51,51,51);text-decoration:none;">
					<span class="username"> <small>@<%= share_item.user.name %></small></span>
						<span class="timestamp"><small> <%= time_ago_in_words(share_item.created_at) %> ago </small></span>
							<span class="content">
								<%= share_item.content %>
									</span></a>

										<div class="well-footer">

											<ul class="share-actions">

										<a class="shown" data-toggle="collapse" data-target="#<%= share_item.id %>_reply">Expand</a></ul>

									<% if current_user != (share_item.user) %>
								<ul class="share-actions">

								<a class="shown" data-toggle="collapse" data-target="#<%= share_item.id %>_reply">
							<li><i class="icon-comment"></i>Reply</li></a></ul>
						<% if current_user.liked?(share_item) %>
							<ul class="share-actions" id="like_form<%= share_item.id %>">
						<%= form_for(current_user.opinions.find_by_like_id(share_item),
    						html: { method: :delete },
             		remote: true) do |f| %>
								<li><i class="icon-heart"></i>
  					<%= f.submit "Unlike", class: "btn-link" %></li></ul>
					<% end %>

  		<% else %>
		<ul class="share-actions" id="like_form<%= share_item.id %>">
		<%= form_for(current_user.opinions.build(like_id: share_item.id), 
				remote: true) do |f| %>
  			<div><%= f.hidden_field :like_id %></div>
						<li><i class="icon-thumbs-up"></i>
  					<%= f.submit "Like", class: "btn-link" %></li></ul>
					<% end %>

  			<% end %>
				<div class="inline-reply-share">
					<div id="<%= share_item.id %>_reply" class="show collapse">
						<form action="/microposts" class="new_micropost" id="new_micropost" method="post">
					<div class="inline-container">
  			<textarea id="micropost_content" name="micropost[content]" placeholder="Reply to <%= share_item.user.realname %>'s share by typing something like @<%= share_item.user.name %> Hey, follow me!" style="margin-top:5px;border-top: 1px solid $grayLight;">@<%= share_item.user.name %> </textarea>
					<input name="authenticity_token" type="hidden" value=$<%= csrf_meta_tags %>
				<input class="btn-small btn-primary" name="commit" value="Reply" type="submit"></form>
			</div></div></div>
				<% else %>

				<ul class="share-actions">
			<li>
			<i class="icon-trash"></i>
			<%= link_to "Delete", share_item, method: :delete, 
				data: { confirm: "Are you sure you want to delete this?" }, 
				style: "vertical-align:6px;", title: share_item.content %>
			</li></ul>
		<% end %>

	</div>
</div>
