<ul id="like_form<%= @micropost.id %>">
<%= form_for(current_user.opinions.find_by_like_id(@micropost),
             html: { method: :delete },
             remote: true) do |f| %>
<li><i class="icon-heart"></i>
  <%= f.submit "Unlike", class: "btn-link" %></li>
<% end %>
  <ul class="ajax-share-stats">
    <li>
      <strong><%= @micropost.likes.count %></strong>
        <a class="ajax-anchor share-item-stats">
      <i class="icon-heart"></i>
    </a>
  </li>
</ul>
