<div id="<%= share_item.user.name %>_<%= share_item.id %>" class="well well-inner">

	<% if share_item.user.admin? %>
		<span class="admin">
			<%= link_to gravatar_for(share_item.user), share_item.user %>
				<%= link_to share_item.user.realname, share_item.user %>
		</span>
			<% else %>
		<span class="user">
			<%= link_to gravatar_for(share_item.user), share_item.user %>
				<%= link_to share_item.user.realname, share_item.user %>
		</span>
	<% end %>

				<a data-toggle="collapse" data-target="#<%= share_item.user.id %>_<%= share_item.id %>" style="color:rgb(51,51,51);text-decoration:none;">
					<span class="username"> <small>@<%= share_item.user.name %></small></span>
						<span class="timestamp"><small> <%= time_ago_in_words(share_item.created_at) %> ago </small></span>
							<span class="content">
								<%= share_item.content %>
							</span></a>

						<div class="well-footer">

				<a data-toggle="collapse" data-target="#<%= share_item.user.id %>_<%= share_item.id %>">Expand</a>

			<div id="<%= share_item.user.id %>_<%= share_item.id %>" class="show collapse">

	<% if current_user?(share_item.user) %>
		<%= link_to "Delete", share_item, method: :delete,
  		data: { confirm: "Are you sure you want to delete this?" },
			title: share_item.content %>
		<% end %>	

		<% if current_user!=(share_item.user) %>

			<form action="/microposts" class="new_micropost" id="new_micropost" method="post">
				<a rel="tooltip" title="Your reply is ready to go!  Just include your message after @<%= share_item.user.name %>">
  			<textarea id="micropost_content" name="micropost[content]" placeholder="Reply to <%= share_item.user.realname %>'s share by typing something like @<%= share_item.user.name %> Hey, follow me!">@<%= share_item.user.name %> </textarea></a>
					<input name="authenticity_token" type="hidden" value=$<%= csrf_meta_tags %>
				<input class="btn-small btn-primary" name="commit" value="Reply" type="submit" style="margin:0;"></form>
		<% end %>

		<div id="like_form<%= share_item.id %>">
  <% if current_user.liked?(share_item) %>
		<%= form_for(current_user.opinions.find_by_like_id(share_item),
    						html: { method: :delete },
             		remote: true) do |f| %>
  	<%= f.submit "Unlike", class: "btn-link" %>
	<% end %>
  <% else %>
		<%= form_for(current_user.opinions.build(like_id: share_item.id), 
				remote: true) do |f| %>
  			<div><%= f.hidden_field :like_id %></div>
  					<%= f.submit "Like", class: "btn-link" %>
					<% end %>
  			<% end %>
			</div>
		</div>
	</div>
</div>
