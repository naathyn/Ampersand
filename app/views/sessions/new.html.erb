<% content_for :head do %>
  <% provide(:title, @title) %>
<% end %>

<div class="page-fade">
  <ul class="breadcrumb">
    <li><%= link_to "Home", :root %> <span class="divider">/</span> </li>
    <li class="active"> <%= @title %> </li>
  </ul>

  <legend><%= @title %></legend>

  <div class="row-fluid">
    <div class="span5 offset3">
      <%= form_for(:session, url: :sessions) do |f| %>

        <%= f.label :name, "Username" %>
        <%= f.text_field :name, placeholder: "Username" %>

        <%= f.label :password %>
        <%= f.password_field :password, placeholder: "Password" %>

        <%= f.submit "Sign in", class: "btn btn-large btn-primary" %>
      <% end %>

      <p>Not a member? <b><%= link_to "Sign up now!", :signup %></b></p>
    </div>
  </div>
</div>
